<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remakers %>
</p>

<% n = 0 %>
<% @stations.each do |stations| %>
  <% if @property.stations.any? %>
    <h2>
      最寄り駅<%= n += 1 %>
    </h2>

    <p>
      <strong>路線名</strong>
      <%= stations.route_name %>
    </p>

    <p>
      <strong>駅名</strong>
      <%= stations.station_name %>
    </p>

    <p>
      <strong>徒歩分数</strong>
      <%= stations.walking_minutes %>分
    </p>
    <% end %>
<% end %>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
