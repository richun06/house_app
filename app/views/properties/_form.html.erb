<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :property_name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remakers %>
  </div>

  <%= form.fields_for :stations do |stations| %>

    <h2>路線</h2>

    <div class="field">
      <%= stations.label :路線名 %>
      <%= stations.text_field :route_name %>
    </div>

    <div class="field">
      <%= stations.label :駅名 %>
      <%= stations.text_field :station_name %>
    </div>

    <div class="field">
      <%= stations.label :徒歩分数 %>
      <%= stations.time_select :walking_minutes %>
    </div>

  <% end %>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
<% end %>
